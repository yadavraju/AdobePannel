<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?colorButtonNormal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="#ff000000" />
        </shape>
    </item>
    <item>
        <selector android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_shortAnimTime"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_checked="true">
                <color android:color="?colorControlHighlight" />
            </item>
            <item android:drawable="@android:color/transparent" />
        </selector>
    </item>
</ripple>